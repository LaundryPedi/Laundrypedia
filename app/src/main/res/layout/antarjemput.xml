<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurasima.laundrypedia.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/antarjemput"/>

    <EditText
        android:id="@+id/tgl_jemput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/jam_jemput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tgl_jemput"
        android:layout_below="@+id/tgl_jemput"
        android:ems="10"
        android:inputType="time" />

    <EditText
        android:id="@+id/tgl_antar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/jam_jemput"
        android:layout_below="@+id/jam_jemput"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/jam_antar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tgl_antar"
        android:layout_alignTop="@+id/tgl_antar"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="time" />

    <EditText
        android:id="@+id/alamat_anda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/jam_antar"
        android:layout_below="@+id/jam_antar"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Masukkan Alamat"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alamat_anda"
        android:layout_below="@+id/alamat_anda"
        android:layout_marginStart="123dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/background_light"
        android:text="0                               " />

    <Button
        android:id="@+id/buttonprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonriwayat"
        android:text="profil" />

    <Button
        android:id="@+id/buttonberanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/alamat_anda"
        android:text="beranda" />

    <Button
        android:id="@+id/buttonriwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonberanda"
        android:text="riwayat" />

    <Button
        android:id="@+id/buttontentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonprofil"
        android:text="about" />

    <RadioButton
        android:id="@+id/konfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonprofil"
        android:layout_toEndOf="@+id/textView2"
        android:text="Konfirmasi" />

</RelativeLayout>